{{ form_start(form) }}

    <div class="container col g-3 p-5" style="background-color: #1b1d24; -webkit-box-shadow: 0px 4px 11px -1px rgba(0,0,0,0.52); box-shadow: 0px 4px 11px -1px rgba(0,0,0,0.52);">
        <div class="row">
            <div style="position: absolute">
                {{ form_label(form.name) }}
            </div>
            <div class="mx-auto">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="row my-2">
            {{ form_label(form.numberOfPlayers) }}
            {{ form_widget(form.numberOfPlayers, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="row my-2">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, { 'attr': {'class': 'form-control', 'type': 'file'} }) }}
        </div>
        <button class="btn btn-outline-success mt-4">{{ button_label|default('Update') }}</button>
    </div>

{{ form_end(form) }}
