{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

    {% block body %}
    <div class="container text-center" style="margin-top: 100px; color: white">
        <h1>{{ team.name }}</h1>
{#        <img src="{{ images('@images/team1.png') }}" alt="image">#}

        <table class="table table-striped my-3" style="background-color: #303540; border-color: #eff6ff">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ team.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ team.name }}</td>
                </tr>
                <tr>
                    <th>Number Of Players</th>
                    <td>{{ team.numberOfPlayers }}</td>
                </tr>
                <tr>
                    <th>Wins</th>
                    <td></td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_team_index') }}" class="btn btn-outline-secondary" role="button">
            <i class="fa-sharp fa-solid fa-arrow-left mr-2"></i>back to list</a>

        <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-outline-secondary" role="button">
            <i class="fa-solid fa-pen  mr-2"></i>edit</a>

        {{ include('team/_delete_form.html.twig') }}
    </div>
{% endblock %}
