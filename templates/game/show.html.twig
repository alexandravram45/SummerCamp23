{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

    {% block body %}
    <div class="container text-center" style="margin-top: 100px; color: white">
        <h1>{{ game.firstTeam  }} VS {{ game.secondTeam }}</h1>

        <table class="table table table-striped my-3" style="background-color: #303540; border-color: #eff6ff">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ game.id }}</td>
                </tr>
                <tr>
                    <th>StartingDate</th>
                    <td>{{ game.startingDate ? game.startingDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>EndingDate</th>
                    <td>{{ game.endingDate ? game.endingDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>1st Team</th>
                    <td>{{ game.firstTeam }}</td>
                </tr>
                <tr>
                    <th>2nd Team</th>
                    <td>{{ game.secondTeam }}</td>
                </tr>
                <tr>
                    <th>WinnerID</th>
                    <td>{{ game.winnerID ? game.winnerID : null  }}</td>
                </tr>

            </tbody>
        </table>


    <a href="{{ path('app_game_index') }}" class="btn btn-outline-secondary" role="button">
        <i class="fa-sharp fa-solid fa-arrow-left mr-2"></i>back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-outline-secondary" role="button">
        <i class="fa-solid fa-pen  mr-2"></i>edit</a>

    {{ include('game/_delete_form.html.twig') }}
    </div>
{% endblock %}
