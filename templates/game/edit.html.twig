{% extends 'base.html.twig' %}

{% block title %}Edit Game{% endblock %}

{% block body %}

    <div class="d-flex flex-column text-center justify-content-center mx-auto p-4" style="width: 600px; margin-top: 100px; color: white">
        <h1 class="my-4">Edit Game</h1>

        {{ form_start(form) }}
        <div class="container col g-3 p-5" style="background-color: #1b1d24; -webkit-box-shadow: 0px 4px 11px -1px rgba(0,0,0,0.52); box-shadow: 0px 4px 11px -1px rgba(0,0,0,0.52);">
            <div class="row">
                <div style="position: absolute">
                    {{ form_label(form.endingDate) }}
                </div>
                <div class="mx-auto">
                    {{ form_widget(form.endingDate) }}
                </div>
            </div>
            <div class="row my-2">
                <p>Winner</p>
                {{ form_widget(form.winnerID, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <button class="btn btn-outline-success mt-4">{{ button_label|default('Update') }}</button>
        </div>

        {{ form_end(form) }}


        <a href="{{ path('app_game_index') }}" class="btn btn-outline-secondary mt-4" style="width: 150px   " role="button">
            <i class="fa-sharp fa-solid fa-arrow-left mr-2"></i>back to list</a>

        {{ include('game/_delete_form.html.twig') }}
    </div>
{% endblock %}
